<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium">
    
    <ImageView
        android:id="@+id/ivBBCNews"
        android:src="@drawable/bbcnews"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/tvNewsHeader"
        android:layout_toEndOf="@id/ivBBCNews"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textSize="@dimen/text_heading_1x"
        android:text="@string/lbl_bbc_news_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvNewsDate"
        android:layout_toEndOf="@id/ivBBCNews"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textSize="@dimen/text_regular"
        android:text="3.1.2023"
      android:layout_below="@id/tvNewsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/flLayout"
        android:layout_below="@id/tvNewsBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivNewBody"
            android:src="@drawable/ukraingprimcial"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"

           />
        <TextView
            android:id="@+id/tvNewsTitle"
            android:textSize="@dimen/text_regular_3x"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:text="@string/lbl_bbc_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tvNewsBody"
        android:textSize="@dimen/text_regular_3x"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_below="@id/ivBBCNews"
        android:text="@string/lbl_bbc_news_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>